{
  "name": "@fullpower-stack/database",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "run-s prisma:migrate-sqlite prisma:generate-sqlite db-seed && tsnd --rs src/index.ts",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push --skip-generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate-sqlite": "prisma migrate dev --name init --schema=./prisma/_sqlite/schema.prisma",
    "prisma:migrate-prod": "prisma migrate deploy",
    "prisma:generate-sqlite": "prisma generate --schema=./prisma/_sqlite/schema.prisma",
    "prisma:generate-prod": "prisma generate",
    "db-seed": "prisma db seed",
    "build": "run-s prisma:migrate-sqlite prisma:generate-sqlite && tsup src/index.ts --format cjs --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsnd prisma/seed.ts"
  },
  "dependencies": {
    "@fullpower-stack/schema": "workspace:*",
    "@prisma/client": "^4.8.0"
  },
  "devDependencies": {
    "@fakerjs/faker": "^3.0.0",
    "@fullpower-stack/eslint-config-custom": "workspace:*",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.8.0"
  }
}
