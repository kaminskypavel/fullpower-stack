{
  "name": "fullpower-stack",
  "private": true,
  "description": "a boiler plate for a cutting edge technologies",
  "author": "Pavel 'PK' Kaminsky",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "dev:vite": "turbo run dev --parallel --no-cache --filter=@fullpower-stack/vite --filter=@fullpower-stack/express-backend",
    "dev:nextjs": "turbo run dev --parallel --no-cache --filter=@fullpower-stack/nextjs --filter=@fullpower-stack/express-backend",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint -- --fix --cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --cache",
    "prepare": "husky install",
    "docker-prod:build": "cross-env COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose -f docker-compose.prod.yml build --parallel",
    "docker-prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker-prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker-dev:build": "cross-env COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose -f docker-compose.dev.yml build --parallel",
    "docker-dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker-dev:down": "docker-compose -f docker-compose.dev.yml down",
    "install:playwright": "playwright install --with-deps"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@fullpower-stack/eslint-config-custom": "workspace:*",
    "@playwright/test": "^1.29.1",
    "@storybook/addon-essentials": "7.0.0-alpha.54",
    "@storybook/addon-interactions": "7.0.0-alpha.54",
    "@storybook/addon-links": "7.0.0-alpha.54",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "7.0.0-alpha.54",
    "@storybook/react-vite": "7.0.0-alpha.54",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@tsconfig/next": "^1.0.3",
    "@tsconfig/node18": "^1.0.1",
    "@tsconfig/vite-react": "^1.0.1",
    "@types/node": "^17.0.45",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.12",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^7.6.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "playwright": "^1.29.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "start-server-and-test": "^1.15.2",
    "storybook": "7.0.0-alpha.54",
    "ts-node-dev": "latest",
    "turbo": "latest",
    "vitest": "^0.25.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "tailwindcss": "^3.2.1",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4",
    "vite": "^4.0.0",
    "zod": "^3.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaminskypavel/fullpower-stack.git"
  },
  "packageManager": "pnpm@7.14.2"
}