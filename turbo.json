{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NODE_ENV",
    "VITE_IS_DOCKER",
    "CI",
    "PLAYWRIGHT_TEST_BASE_URL",
    "PLAYWRIGHT_HEADLESS"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": []
    },
    "test:ci": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^prisma:generate-sqlite"],
      "cache": false
    },
    "prisma:generate-sqlite": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    }
  }
}
